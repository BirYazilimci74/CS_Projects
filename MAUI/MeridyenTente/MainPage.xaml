<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MeridyenTente.MainPage"
             Title="MeridyenTente">

    <ScrollView
        VerticalOptions="Center">
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <VerticalStackLayout
                VerticalOptions="Center"
                Spacing="10">
                <Button
                    x:Name="CamBalkonBtn"
                    Text="Cam Balkon" 
                    Clicked="OnTransitionButtonClicked"
                    WidthRequest="200"/>
                <Button
                    x:Name="GuillotineBtn"
                    Text="Giyotin"
                    Clicked="OnTransitionButtonClicked"
                    WidthRequest="200"/>
                <Button
                    x:Name="TenteBtn"
                    Text="Tente"
                    Clicked="OnTransitionButtonClicked"
                    WidthRequest="200"/>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
